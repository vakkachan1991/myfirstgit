#!/bin/bash

# Ask for input
echo "Enter a service name:"
read service_name

# Check if input is empty and exit if no service name is provided
if [ -z "$service_name" ]; then
    echo "Error: No service name entered!"
    exit 1  # Exit with error code 1
fi

# Check if service is running
if systemctl status "$service_name" | grep "running"; then
    echo "✅ $service_name is running"
else
    echo "❌ $service_name is not running or not installed"
    exit 1  # Exit with error code 1 if service is not running
fi
